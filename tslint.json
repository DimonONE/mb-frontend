{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "./src/graphql.tsx",
      "./src/client.tsx",
      "./src/globals.d.ts"
    ]
  },
  "jsRules": {},
  "rules": {
    "align":[
      true,
      "parameters",
      "arguments",
      "statements"
    ],
    "ban":false,
    "class-name":true,
    "comment-format":[
      true,
      "check-space"
    ],
    "curly":true,
    "eofline":false,
    "forin":true,
    "import-name": false,
    "indent":[
      true,
      "spaces",
      2
    ],
    "interface-over-type-literal": false,
    "interface-name":[
      true,
      "never-prefix"
    ],
    "jsdoc-format":true,
    "jsx-no-lambda":false,
    "jsx-no-multiline-js":false,
    "label-position":true,
    "max-classes-per-file": [],
    "max-line-length":[
      true,
      120
    ],
    "ordered-imports": false,
    "no-any":true,
    "no-arg":true,
    "no-bitwise":true,
    "function-name": false,
    "no-console":[
      true,
      "log",
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-consecutive-blank-lines":true,
    "no-construct":true,
    "no-debugger":true,
    "no-duplicate-variable":true,
    "no-empty":true,
    "no-eval":true,
    "no-shadowed-variable":true,
    "no-string-literal":true,
    "no-switch-case-fall-through":true,
    "no-trailing-whitespace":false,
    "no-unused-expression":true,
    "object-literal-sort-keys": false,
    "no-duplicate-imports": false,
    "one-line":[
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark":[
      true,
      "single",
      "jsx-double"
    ],
    "radix":true,
    "semicolon":[
      true,
      "always"
    ],
    "switch-default":true,
    "trailing-comma":false,
    "triple-equals":[
      true,
      "allow-null-check"
    ],
    "typedef":[
      true,
      "parameter",
      "property-declaration"
    ],
    "typedef-whitespace":[
      true,
      {
        "call-signature":"nospace",
        "index-signature":"nospace",
        "parameter":"nospace",
        "property-declaration":"nospace",
        "variable-declaration":"nospace"
      }
    ],
    "variable-name":[
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "whitespace":[
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    "arrow-return-shorthand": true,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "array-type": [true, "array"]
  },
  "rulesDirectory": []
}
