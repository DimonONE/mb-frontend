.root
  box-sizing: border-box
  width: 100%
  height: 64px
  border: 1px solid #ADB5BD
  padding: 0 16px
  transition: border-color .3s
  border-radius: 8px
  outline: none
  font-size: 16px

  &:hover
    border-color: #E46039

  &:focus
    border-color: #E46039

  &:disabled
    border-color: #F7F7F7

.filled
  border-color: #E9E9E9

.invalid
  border-color: #BF4546