.root
  display: flex
  flex-direction: column
  padding: 60px 0
  width: calc(100% - 20px)
  align-items: center

.image
  width: 94px

.title
  font-size: 24px
  font-weight: 500
  margin-top: 28px

.buttons
  margin-top: 20px
