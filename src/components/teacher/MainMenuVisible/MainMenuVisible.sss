.mainMenuVisible
  display: flex
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.05)
  background-color: $white
  padding: 10px 0
  font-weight: bold
  font-size: 14px
  text-transform: uppercase
  color: $darkGray
  line-height: normal
  &Inner
    display: flex
    width: 100%
    height: 100%
    justify-content: space-between
    align-items: center


@media ($min-desktop)
  .mainMenuVisible
    display: none