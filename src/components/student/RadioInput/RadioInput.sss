.root
  display: flex
  justify-content: center
  align-items: center
  box-sizing: border-box
  width: 18px
  height: 18px
  border-radius: 100%
  border: 3px solid #fff

  &:hover
    cursor: pointer

.input
  display: none

  &:checked ~ .checkMark
    background-color: #fff
    transform: scale(1)

.checkMark
  width: 8px
  height: 8px
  border-radius: 100%
  transform: scale(0)
  transition: .2s background-color, .2s transform