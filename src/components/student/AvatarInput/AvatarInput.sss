.root
  display: flex
  flex-direction: column
  align-items: center

.imageWrapper
  width: 100px
  height: 100px
  border-radius: 100%
  overflow: hidden
  background-color: #C4C4C4
  display: flex
  align-items: center

.image
  width: 100%
  height: auto
  display: flex
  text-align: center

.label
  padding: 8px 0
  width: 100px
  cursor: pointer
  text-align: center

.input
  display: none

.error
  margin-top: 4px
  font-size: 14px
  color: #E46039