.title
  font-size: 20px
  font-family: "DIN Pro"
  font-weight: 700
  margin-bottom: 12px

.input
  &:not(:last-of-type)
    margin-bottom: 8px

.button
  margin-top: 20px
  width: 100%

.error
  color: #ff0000
  margin-top: 8px
  text-align: center


@media ($min-desktop)

  .title
    margin-bottom: 15px

  .input
    &:not(:last-of-type)
      margin-bottom: 10px
