.root
  display: flex
  flex-wrap: wrap
  font-size: 14px

.group
  width: 50%
  display: flex
  flex-direction: column
  justify-content: space-between
  margin-bottom: 30px

.link
  color: #fff

  &:not(:first-child)
    margin-top: 20px


@media ($min-tablet)

  .link

    &:first-child
      margin-top: 15px

  .root
    width: 100%
    justify-content: space-around

  .group
    padding: 18px 0
    width: auto