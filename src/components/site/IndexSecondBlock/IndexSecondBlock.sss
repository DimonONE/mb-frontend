.root
  display: flex
  align-items: center
  background-color: #E98061

.layout
  padding-top: 40px
  padding-bottom: 40px

.paragraph
  color: #fff
  margin-bottom: 20px
  font-size: 18px

.image
  display: block
  margin: 40px auto 0 auto


@media($min-desktop)

  .layout
    padding: 165px 0
    display: flex
    flex-direction: row-reverse
    align-items: center

  .textGroup
    margin-left: 82px

  .paragraph
    font-size: 28px
    margin-bottom: 40px

